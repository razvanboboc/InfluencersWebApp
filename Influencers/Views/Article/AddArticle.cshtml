@model Influencers.BusinessLogic.ViewModels.ArticleViewModels.AddArticleViewModel
@{
    ViewData["Title"] = "Add Article";
}


<form asp-action="AddArticle" method="post">
    <div class="row">
        <div class="col-2">
            E-mail
        </div>
        <div class="col-10">
            
            <input class="form-control" type="email" id="email" asp-for="Email" required>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">
            Title
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Title " required/>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">
            Content
        </div>
        <div class="col-10">
            <input class="form-control" type="text" asp-for="Content" required>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-primary" href="@Url.Action("Index", "Article")">Post</button>

        </div>
    </div>
</form>

