@model Influencers.BusinessLogic.ViewModels.ArticleViewModels.EditArticleViewModel
@{
    ViewData["Title"] = "Edit Article";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<meta name="viewport" content="width=device-width, initial-scale=1">

<form class="w3-container w3-card-4" asp-action="EditArticle" method="post">
    <h2 class="w3-text-blue">Edit your article</h2>
    <input type="hidden" asp-for="ArticleId" />
    <div class="row">
        <div class="col-12">
            <label class="w3-text-blue"><b>Email</b></label>
            <input class="form-control" type="email" asp-for="Email"required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">
            <label class="w3-text-blue"><b>Content</b></label>
            <textarea class="w3-input w3-border" asp-for="Content"required></textarea>
        </div>
    </div>
    <br />

    <p><button type="submit" class="btn btn-primary w3-btn w3-blue">Post</button></p>

</form>

