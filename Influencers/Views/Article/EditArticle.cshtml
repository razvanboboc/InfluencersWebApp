@model Influencers.BusinessLogic.ViewModels.ArticleViewModels.EditArticleViewModel
@{
    ViewData["Title"] = "Edit Article";
}


    <form asp-action="EditArticle" method="post">
        <input type="hidden" asp-for="ArticleId" />
        <div class="row">
            <div class="col-2">
                Email Adress
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Email" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-2">
                Content
            </div>
            <div class="col-10">
                <input class="form-control" type="text" asp-for="Content">
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-10"></div>
            <div class="col-2">
                <button type="submit" class="btn btn-primary">Edit</button>

            </div>
        </div>
    </form>

