@model Influencers.BusinessLogic.ViewModels.AuthorViewModels.AddAuthorViewModel
@{
    ViewData["Title"] = "Join Influencers";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<meta name="viewport" content="width=device-width, initial-scale=1">


<form class="w3-container w3-card-4" asp-action="JoinInfluencers" method="post">
    <h2 class="w3-text-blue">Join influencers</h2>
    <div class="row">
        <div class="col-12">
            <label class="w3-text-blue"><b>Email</b></label>
            <input class="form-control" type="email" asp-for="Email" required>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-12">
            <label class="w3-text-blue"><b>Nickname</b></label>
            <input class="form-control" type="text" asp-for="Nickname " required />
        </div>
    </div>
    <br />

    <p><button type="submit" class="btn btn-primary w3-btn w3-blue" href="@Url.Action("Index", "Article")">Join</button></p>

</form>